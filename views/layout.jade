            li
              a(href='overview.html') Documentation
            li
              .navbar-form
                a.button(href='#') Download

    block content

    footer.mashape-footer.mashape-footer-theme-light
      .mashape-footer-bar
        .container
          ul.mashape-footer-social
            li
              a.mf-ico-google(href='https://plus.google.com/+Mashape') Google+
            li
              a.mf-ico-facebook(href='https://www.facebook.com/Mashape') Facebook
            li
              a.mf-ico-twitter(href='https://twitter.com/mashape') Twitter
            li
              a.mf-ico-github(href='https://github.com/mashape') GitHub
          span &copy; #[strong 2015], #[a(href='https://mashape.com') Mashape]
          span.mashape-footer-separator
          a(href='http://www.mashape.com/terms') Terms
          a(href='http://www.mashape.com/privacy') Privacy

    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script.
      (function ($) {
        $('.navbar-toggle').on('click', function () {
          var $navbar = $($(this).data('target'));
          $navbar.slideToggle(150);
        });
      }(jQuery));

    block scripts
